{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "dist",
    "module": "esnext",
    "target": "es6",
    "lib": ["es6", "dom", "dom.iterable", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "include": ["src/*", "src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
  ]
}